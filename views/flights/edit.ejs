<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/forms.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
    id="new-form" 
    action="/flights/<%= flight._id %>?_method=PUT" 
    method="POST"
  >
    <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select" required>
      <option value="<%= flight.airline %>"><%= flight.airline %></option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select" required>
      <option value="<%= flight.airport %>"><%= flight.airport %></option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo-input">Flight Number:</label>
    <input type="number" name="flightNo" value="<%= flight.flightNo %>" id="flightNo-input" min="10" max="9999" required>
    <label for="departs-date-input">Departs:</label>
    <input type="number" name="departs" value="<%= flight.departs %>" id="departs-date-input" min="2000" required>
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>